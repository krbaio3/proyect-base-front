{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "jsx": "react",
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "types": [
          "node",
          "mocha",
          "chai",
          "karma-chai-sinon",
          "jasmine",
          "jasminewd2",
        ],
        "typeRoots": ["../../node_modules/@types"],
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}
